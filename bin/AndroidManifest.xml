<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eric.eidel.redrecommend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET" /> 
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="eric.eidel.redrecommend.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
         	android:name="eric.eidel.redrecommend.RecommendationPage"
         	android:label="@string/title_activity_recommendation_page" 
       		android:parentActivityName="eric.eidel.redrecommend.MainActivity" >
		        <meta-data
		            android:name="android.support.PARENT_ACTIVITY"
		            android:value="eric.eidel.redrecommend.MainActivity" />
 	   </activity>
     
    </application>

</manifest>
